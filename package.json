{
  "name": "better-nexbase",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @better-nexbase/backend dev",
    "dev:setup": "turbo -F @better-nexbase/backend dev:setup",
    "check": "biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@better-nexbase/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-nexbase/config": "workspace:*",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.6"
}
